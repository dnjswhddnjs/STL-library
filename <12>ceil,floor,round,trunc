#include <iostream>
#include <cmath>
using namespace std;

//출처: https://blockdmask.tistory.com/100?category=249379 [개발자 지망생]

//ceil,floor,round
//올림,내림,반올림
//round(N)==ceil(N-0.5)==floor(N+0.5)
//단, floating point 에서 실수표현은 근삿값이므로 이런짓은 안하는게 좋다
//(1.5-0.5가 1이 아닐 수 있으니까)

//trunc
//버림
//소수점 이하를 그냥 버리는 것과 같다.(내림과 다르다)



int main() {
	
	cout << "ceil(2.5) : " << ceil(2.6) << endl;
	cout << "floor(2.5) : " << floor(2.6) << endl;
	cout << "round(2.5) : " << round(2.6) << endl;
	cout << "ceil(2.6-0.5) : " << ceil(2.6-0.5) << endl;
	cout << "floor(2.6+0.5) : " << floor(2.6 + 0.5) << endl;
	cout << "trunc(2.5) : " << trunc(2.6) << endl;


}
